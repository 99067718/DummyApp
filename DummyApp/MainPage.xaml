<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DummyApp.MainPage">

    <Grid RowDefinitions="Auto, *" BackgroundColor="Transparent">
        <!-- This is completely gone when you open the app -->
        <RefreshView Grid.Row="0" x:Name="RefreshPage" IsRefreshing="False" RefreshColor="Cyan" BackgroundColor="White">
            <ScrollView>
                <VerticalStackLayout BackgroundColor="Gray">
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Fill" ZIndex="0">
                        <Image Source="dotnet_bot.svg" x:Name="StatusIcon" HeightRequest="50" WidthRequest="50" HorizontalOptions="Start"/>
                        <Label x:Name = "PullToRefreshLabel"  BackgroundColor="Transparent" Text="Pull to Refresh!" HorizontalOptions="Center" TextColor="Black"/>
                        <Image Source="dotnet_bot.svg" x:Name="StatusIcon2" HeightRequest="50" HorizontalOptions="End" WidthRequest="50"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
        <!-- Loads the website -->
        <WebView Grid.Row="1" HeightRequest="600" x:Name="WebsiteView" Source="https://www.google.com"/>
    </Grid>

</ContentPage>
